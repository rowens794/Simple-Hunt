// Modal Login Form
form#modalLoginForm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true', action='/login', method='post')
  .modal-dialog(role='document')
    .modal-content
      .modal-header.text-center
        h4.modal-title.w-100.font-weight-bold Sign-in
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
      
      .modal-body.mx-3
        .md-form.mb-4
          label(data-error='wrong', data-success='right', for='defaultForm-email') Username
          input.form-control.validate(type='text', name='username', id="username", placeholder='Username', required, autofocus)
          
        .md-form.mb-4
          label(data-error='wrong', data-success='right', for='defaultForm-pass') Password
          input.form-control.validate(type='password', id='inputPassword', name='password', placeholder='Password')
          
      .modal-footer.d-flex.justify-content-center
          button.btn.btn-primary(type='submit') LOGIN




